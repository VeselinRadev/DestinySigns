<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".LoveMatchingActivity">

        <EditText
            android:id="@+id/first_name_txt"
            android:background="@drawable/round_btn"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint=" Your Name"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="28sp">

        </EditText>

    <EditText
        android:id="@+id/second_name_txt"
        android:background="@drawable/round_btn"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:hint=" Your Partner's Name"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="28sp">

    </EditText>


    <FrameLayout
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="invisible"
        android:layout_marginHorizontal="80dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart1"
            app:tint="@color/white">
        </ImageView>
        <TextView
            android:id="@+id/love_percent_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="64sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="32%">
        </TextView>
    </FrameLayout>

    <Button
        android:id="@+id/calculate_btn"
        android:background="@drawable/round_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:text="Calculate Love" />
    <fragment
        android:id="@+id/fragment"
        android:name="com.veselin.destinysigns.AdMobFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>
</LinearLayout>