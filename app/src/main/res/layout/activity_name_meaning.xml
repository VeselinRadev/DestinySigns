<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NameMeaningActivity"
    android:background="@color/blue_300">
    <EditText
        android:id="@+id/name_txt"
        android:background="@drawable/round_btn"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:hint=" Your Name"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="28sp">
    </EditText>

    <TextView
        android:id="@+id/name_description_txt"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"
        android:textSize="32dp"
        android:gravity="center"
        android:text="Your name describes you as: \n Victorious, Earthly, Seductive, Selfish, Expressive, Loyal, Inspiring and Natural">

    </TextView>
    <Button
        android:id="@+id/find_meaning_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textColor="@color/blue_300"
        android:textSize="16dp"
        android:text="Find Your Name Meaning"
        android:background="@drawable/round_btn">

    </Button>
    <fragment
        android:id="@+id/fragment"
        android:name="com.veselin.destinysigns.AdMobFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>
</LinearLayout>